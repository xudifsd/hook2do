#home
  nav.topnav
    padding 10px
    overflow hidden
    background #00CC83

    li
      float right
      list-style none
      text-transform uppercase
      width 100px
      text-align center
      font-weight bold

    a
      color white
      text-decoration none

  section.main
    section
      min-height 200px
      padding 40px 0

    .container
      margin 0 auto
      text-align center
      max-width 1100px

     .row
       overflow hidden

     .title
       font-weight 100
       font-size 32px

       b
         font-weight normal

     .description
       max-width 640px
       margin 0 auto


     h3
       font-size 28px
       font-weight normal

  #home-header
    height 800px
    color white
    background #00CC83
    background-image url('/static/img/banner.png')
    background-repeat no-repeat
    background-position center center
    background-size 1000px auto

    @media (min-width: 640px)
      background-size 1200px auto

    @media (min-width: 960px)
      background-size 1600px auto

    @media (-webkit-min-device-pixel-ratio: 1.5), (min-resolution: 144dpi) 
      background-image url('/static/img/banner@2x.png')

  #header-content
      width 300px
      margin 0 auto
      padding-top 300px

      .sub-title
        font-size 24px

  #home-callouts
    .logo
      width 200px
      margin 40px auto

    .col
      padding 0 20px
      @media(min-width:640px)
        width 33.3%
        float left

  #home-hook-intro
    background #EDF1F2
    .col
      padding 20px
      @media(min-width:640px)
        float left

        &:first-child
          width 40%

        &:last-child
          width 60%

      &.contents-col
        text-align left

  #home-start
    a.button
      display inline-block
      background #00cc83
      color white
      text-decoration none
      text-transform uppercase
      font-size 18px
      width 250px
      line-height 40px
      border-radius 3px

  #home-team
    background #7BC2F7
    color white

    .col.avatar
      float left
      @media(min-width:320px)
        width 50%
      @media(min-width:640px)
        width 25%

      img
        border-radius 100%
        border white solid 5px

  footer
    padding 40px 20px

    #copyright-text
      text-align center
